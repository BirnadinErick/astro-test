---
import BaseLayout from "../layouts/BaseLayout.astro";
import { Hero, SubHero } from "../misc/Home";

const posts = await Astro.glob("./posts/*.md");
---

<BaseLayout pageTitle="Enigma Bits | Birnadin Erick">
  <section class="my-16">
    <h1 class="text-4xl font-bold w-3/5 my-4 font-serif">{Hero}</h1>
    <p class="text-gray-500 w-2/3">{SubHero}</p>
  </section>

  <main>
    <h3 class="text-gray-500 text-lg">Published Bits</h3>
    <ol class="my-4 list-decimal ml-8">
      {
        posts.map((post) => (
          <li class="font-mono">
            <a
              class="hover:text-blue-300 hover:underline hover:underline-offset-2 transition-colors duration-200 ease-out"
              href={post.url}
            >
              {post.frontmatter.title}
            </a>
          </li>
        ))
      }
    </ol>
  </main>
</BaseLayout>
